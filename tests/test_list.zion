module _
# test: pass

type NodeInt has
	var value int
	var next ListInt

tag Done

type ListInt is NodeInt or Done

def len(l ListInt) int
	when l
		is Done
			return 0
		is NodeInt
			return 1 + len(l.next)

def sum(l ListInt) int
	when l
		is Done
			return 0
		is NodeInt
			return l.value + sum(l.next)

def main()
	l := NodeInt(1, NodeInt(2, NodeInt(3, Done)))
	print(len(l))
	print(sum(l))
